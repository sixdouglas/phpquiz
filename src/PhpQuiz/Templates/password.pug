extends main

block content
    - $action = $items['baseUrl'] . '/savepassword'

    div.container
        h1='Change password'
        if ($items.showAlert)
            div(class="alert alert-warning alert-dismissible fade show" role="alert")
                span=$items.alert
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
        form(action=$action name="passwordChangeForm" id="passwordChangeForm" method='post' class="needs-validation")
            div(class='form-group')
                label(for="oldInputPassword")='Old Password'
                input(type="password" class="form-control" id="oldInputPassword" name="oldPassword" placeholder="Old Password" required)
            div(class='form-group')
                label(for="newInputPassword")='New Password'
                input(type="password" class="form-control" id="newInputPassword" name="newPassword" placeholder="New Password" required)
            div(class='form-group')
                label(for="newRepeatInputPassword")='New Password Confirm'
                input(type="password" class="form-control" id="newRepeatInputPassword" name="newRepeatPassword" placeholder="New Password" required)
                div(class="invalid-feedback" id="invalidFeedback")='Please enter the same password twice with a size greater than 8 caracters.'
            button(type="submit" class="btn ml-md-1 mt-5 btn-primary") Submit
            button(type="reset" class="btn ml-md-1 mt-5 btn-secondary") Cancel

block css
    - $href=$items['baseUrl'] . '/css/password.css'
    link(rel='stylesheet' href=$href crossorigin='anonymous')

block jscript
    - $script=$items['baseUrl'] . '/js/password.js'
    script(src=$script crossorigin='anonymous')


